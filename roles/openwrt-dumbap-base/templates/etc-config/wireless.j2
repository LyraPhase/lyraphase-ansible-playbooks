
config wifi-device 'radio0'
	option type 'mac80211'
	option channel '11'
	option hwmode '11g'
	option path 'soc/soc:pcie-controller/pci0000:00/0000:00:02.0/0000:02:00.0'
	option htmode 'HT20'
	option country 'US'

config wifi-device 'radio1'
	option type 'mac80211'
	option hwmode '11a'
	option path 'soc/soc:pcie-controller/pci0000:00/0000:00:03.0/0000:03:00.0'
	option htmode 'VHT80'
	option country 'US'
	option channel 'auto'

config wifi-iface
	option device 'radio0'
	option mode 'ap'
	option ssid '{{ openwrt_dumbap_base_wireless["5Ghz"]["ssid"] }}'
	option network 'lan'
	option encryption 'psk2'
	option key '{{ openwrt_dumbap_base_wireless["5Ghz"]["wpa_key"] }}'

config wifi-iface
	option device 'radio1'
	option mode 'ap'
	option ssid 'OpenWRT'
	option ssid '{{ openwrt_dumbap_base_wireless["2.4Ghz"]["ssid"] }}'
	option network 'lan'
	option encryption 'psk2'
	option key '{{ openwrt_dumbap_base_wireless["2.4Ghz"]["wpa_key"] }}'

