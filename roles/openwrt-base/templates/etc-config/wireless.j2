
config wifi-device 'radio0'
	option type 'mac80211'
	option hwmode '11g'
	option path 'soc/soc:pcie-controller/pci0000:00/0000:00:02.0/0000:02:00.0'
	option htmode 'HT20'
	option country 'US'
	option distance '17'
	option txpower '17'
	option legacy_rates '0'
	option channel '3'

config wifi-device 'radio1'
	option type 'mac80211'
	option hwmode '11a'
	option path 'soc/soc:pcie-controller/pci0000:00/0000:00:03.0/0000:03:00.0'
	option htmode 'VHT80'
	option country 'US'
	option distance '17'
	option legacy_rates '0'
	option txpower '23'
	option channel 'auto'

config wifi-iface
	option device 'radio0'
	option mode 'ap'
	option ssid '{{ openwrt_base_wireless.radio0.ssid }}'
	option network 'lan'
	option encryption 'psk2'
	option key '{{ openwrt_base_wireless.radio0.key }}'

config wifi-iface
	option device 'radio1'
	option mode 'ap'
	option ssid '{{ openwrt_base_wireless.radio1.ssid }}'
	option network 'lan'
	option encryption 'psk2'
	option key '{{ openwrt_base_wireless.radio1.key }}'
